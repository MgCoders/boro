<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uy.mgcoders.boro.IssueActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tool_bar"
        android:padding="5dp">

        <TextView
            android:id="@+id/issue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="false"
            android:padding="5dp"
            android:singleLine="false"
            android:text="DNP-34"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/issue_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/issue_name"
            android:padding="5dp"
            android:text="initialText"
            android:textColor="@color/ColorPrimary" />

        <TextView
            android:id="@+id/issue_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_state"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:text="initialText"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/issue_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/issue_summary"
            android:layout_alignStart="@+id/issue_summary"
            android:layout_below="@+id/issue_summary"
            android:padding="5dp"
            android:text="initialText"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnRegisterTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="@string/register_time" />
    </RelativeLayout>

</RelativeLayout>
